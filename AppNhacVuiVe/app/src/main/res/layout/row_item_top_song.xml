<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewTopSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTopSong"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="fitXY" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btnTopSong"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignRight="@+id/imgTopSong"
                android:layout_alignBottom="@+id/imgTopSong"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_playlist2"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout

        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/CardViewTopSong"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="140dp">
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtThuTuSong"
            android:text="1."
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center"

            android:textColor="#C60000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNameSongTop1"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Tên bài hát"
            android:layout_marginLeft="2dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSingerSongTop1"
            android:singleLine="true"
            android:layout_marginTop="1dp"
            android:textSize="12sp"
            android:text="-Tên ca sĩ"
            android:gravity="bottom" />

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="2."
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"

                android:textColor="#B83619"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNameSongTop2"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="Tên bài hát"
                android:layout_marginLeft="2dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSingerSongTop2"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:textSize="12sp"
                android:text="-Tên ca sĩ"
                android:gravity="bottom" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="3."
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"

                android:textColor="#8C491A"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNameSongTop3"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="Tên bài hát"
                android:layout_marginLeft="2dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSingerSongTop3"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:textSize="12sp"
                android:text="-Tên ca sĩ"
                android:gravity="bottom" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>