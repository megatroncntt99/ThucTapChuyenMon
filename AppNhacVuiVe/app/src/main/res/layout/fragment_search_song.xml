<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.example.Fragment.FragmentSearchSong"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_song"
        android:text="Kết Quả Tìm Kiếm"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>
    <ListView
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:layout_below="@+id/search_song"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvSearchSong"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarSearchSong"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/custom_progress_bar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có dữ liệu"
        android:textColor="#000000"
        android:visibility="gone"
        android:id="@+id/txtNoDataSearchSong"
        android:layout_centerInParent="true"/>
</RelativeLayout>
