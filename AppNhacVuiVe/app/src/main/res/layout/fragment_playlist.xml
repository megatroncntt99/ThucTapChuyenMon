<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Có thể bạn muốn nghe >"
       android:textSize="24dp"
       android:id="@+id/txtSeeMorePlaylist"
       android:gravity="center|left"
       android:textStyle="bold"
       android:textColor="#000000"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp" />
   <androidx.recyclerview.widget.RecyclerView
       android:layout_marginTop="10dp"
       android:layout_below="@+id/txtSeeMorePlaylist"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/rwPlaylist"/>
   <TextView
       android:layout_marginTop="10dp"
       android:textColor="#8216CA"
       android:gravity="center"
       android:id="@+id/txtSeeMorePlaylist1"
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:text="Xem thêm"
       android:layout_below="@+id/rwPlaylist"/>
</RelativeLayout>