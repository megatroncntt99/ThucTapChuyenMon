<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/CardViewAB"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgAlbum"
            android:scaleType="fitXY"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_playlist2"
            android:layout_alignBottom="@+id/imgAlbum"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:id="@+id/btnPlayAlbum"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="100dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="Tên Album "
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginLeft="6dp"
        android:id="@+id/txtNameAlbum"
        android:layout_below="@+id/CardViewAB"/>

    <TextView
        android:layout_width="100dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="Tên Ca sĩ "
        android:textSize="16sp"
        android:textColor="#7A7676"
        android:layout_marginLeft="6dp"
        android:id="@+id/txtNameSingerAB"
        android:layout_below="@+id/txtNameAlbum"/>


</RelativeLayout>