<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewAB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/btnPlayAlbum"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/imgAlbum"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_playlist2"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNameAlbum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CardViewAB"
        android:layout_marginLeft="6dp"
        android:maxLines="2"
        android:text="Tên Album "
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtNameSingerAB"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameAlbum"
        android:layout_marginLeft="6dp"
        android:maxLines="2"
        android:text="Tên Ca sĩ "
        android:textColor="#7A7676"
        android:textSize="16sp" />


</RelativeLayout>