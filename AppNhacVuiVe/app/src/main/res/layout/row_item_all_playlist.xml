<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAllPlaylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btnPlayAllPlaylist"
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_playlist2"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:maxWidth="180dp"
        android:lines="2"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="left"
        android:id="@+id/txtNameAllPlaylist"
        android:textColor="#000000"
        android:text="Top 100 Pop \u00c2u M\u1ef9 Hay"
        android:ellipsize="end"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/txtNameSingers"
        android:text="Various Artists"
        android:ellipsize="end"/>

</LinearLayout>