<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewMVLibrary"
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgMVLibrary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txtTimeMVLibrary"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/custum_time_mv"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/CardViewMVLibrary"
        android:gravity="center|left">

        <TextView
            android:id="@+id/txtSingerMVLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="Megatron Music"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtNameMVLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtSingerMVLibrary"
            android:layout_marginBottom="10dp"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="TÃªn Album "
            android:textColor="#000000"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/LikeMVLibrary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_like"
        android:visibility="visible" />

</RelativeLayout>