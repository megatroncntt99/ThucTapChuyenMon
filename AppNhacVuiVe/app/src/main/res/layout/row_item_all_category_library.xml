<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewCategoryLibrary"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgCategoryLibrary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/CardViewCategoryLibrary"
        android:gravity="center|left">
        <TextView
            android:id="@+id/txtCategoryLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="bottom"
            android:singleLine="true"
            android:text="Megatron Music"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtNameCategoryLibrary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtCategoryLibrary"
            android:layout_marginBottom="2dp"
            android:gravity="center|left"
            android:maxLines="2"
            android:text="Tên thể loại "
            android:textColor="#000000"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/LikeCategoryLibrary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/imgMenuCategoryLibrary"
        android:scaleType="fitXY"
        android:src="@drawable/ic_like"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgMenuCategoryLibrary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_more_vert_black_24dp_2" />

</RelativeLayout>