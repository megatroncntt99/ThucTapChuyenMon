<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAllAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
            <RelativeLayout
                android:id="@+id/btnPlayAllAlbum"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_playlist2"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:maxWidth="180dp"
        android:lines="2"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="left"
        android:id="@+id/txtNameAllAlbum"
        android:textColor="#000000"
        android:text="Thích Thì Đến (Single)"
        android:ellipsize="end"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/txtNameSingerAlbum"
        android:text="Lê Bảo Bình"
        android:ellipsize="end"/>

</LinearLayout>