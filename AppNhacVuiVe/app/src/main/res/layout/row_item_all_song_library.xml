<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/CardViewSongLibrary"
        app:cardCornerRadius="8dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:id="@+id/imgSongLibrary"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNameSongLibrary"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Tên bài hát"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/CardViewSongLibrary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSingerSongLibrary"
        android:singleLine="true"
        android:layout_marginTop="1dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:text="Tên ca sĩ"
        android:gravity="bottom"
        android:layout_below="@+id/txtNameSongLibrary"
        android:layout_toRightOf="@+id/CardViewSongLibrary"/>

    <ImageView
        android:id="@+id/LikeSongLibrary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"

        android:layout_toLeftOf="@+id/imgMenuSongLibrary"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_like"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/imgMenuSongLibrary"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_more_vert_black_24dp_2"
        />

</RelativeLayout>