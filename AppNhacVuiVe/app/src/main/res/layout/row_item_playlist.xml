<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/CardViewPlaylist"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgPlaylist"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/imgPlaylist"
                android:id="@+id/btnPlaylist"
                android:gravity="center"
                android:layout_alignRight="@+id/imgPlaylist"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_playlist2"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="110dp"
        android:layout_marginLeft="6dp"
        android:maxLines="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="TÃªn playlist "
        android:textSize="16sp"
        android:textColor="#000000"

        android:id="@+id/txtNamePlaylist"
        android:layout_below="@+id/CardViewPlaylist"/>

</RelativeLayout>