<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginLeft="6dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgPlaylist"
        android:layout_marginTop="6dp"

        android:scaleType="fitXY"
        />
    <View
        android:layout_marginLeft="6dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/custom_view_mv"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_playlist2"
        android:layout_alignBottom="@+id/imgPlaylist"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/imgPlaylist"
        android:layout_marginRight="10dp"
        android:id="@+id/btnPlaylist"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"/>
    <TextView
        android:layout_width="100dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:text="TÃªn playlist "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="6dp"
        android:id="@+id/txtNamePlaylist"
        android:layout_below="@+id/imgPlaylist"/>

</RelativeLayout>