<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.Fragment.FragmentAlbum">

    <RelativeLayout
        android:id="@+id/rlAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitleAlbum"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|left"
            android:text="Album hot >"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rwAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlAlbum"
        android:layout_marginTop="10dp" />

    <TextView

        android:id="@+id/txtSeeMoreAlbumHot"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rwAlbum"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Xem thÃªm"
        android:textColor="#8216CA" />

</RelativeLayout>