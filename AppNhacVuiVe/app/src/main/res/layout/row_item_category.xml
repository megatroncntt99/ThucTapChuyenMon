<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCategory"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="fitXY" />
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/btnCategory"
                android:layout_alignRight="@+id/imgCategory"
                android:layout_alignBottom="@+id/imgCategory">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_playlist2"
                    app:civ_border_color="#CD3708"
                    app:civ_border_width="1dp" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/txtNameCategory"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CardViewCategory"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:text="Tên thể loại "
        android:textColor="#000000"
        android:textSize="16sp" />


</RelativeLayout>